<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FileServerRunner.MainWindow"
        Title="FileServerRunner"
        Width="300"
        Height="300"
        >
        
        <StackPanel>
                <TextBlock x:Name="EnterPortNumberBlock">Enter Port Number:</TextBlock>
                <TextBox x:Name="PortNumberText"></TextBox>
                <TextBlock x:Name="IpAddressBlock">Serving Url</TextBlock>
                <Button x:Name="ServingFolderButton">Choose Folder To Serve</Button>
                <TextBlock x:Name="FolderPathBlock">Folder Path</TextBlock>
                <Button x:Name="StartServerButton">Start File Server</Button>
                <TextBlock x:Name="ServerInfo"></TextBlock>
                <Button x:Name="CloseServerButton">Close Server</Button>
        </StackPanel>
</Window>
